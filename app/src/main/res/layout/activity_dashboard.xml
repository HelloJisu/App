<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0px"
    tools:context=".DashboardActivity">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard"
            android:layout_gravity="center">
            <TextView
                android:layout_width="190dp"
                android:layout_height="20dp"
                android:id="@+id/t_dashboard"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_centerHorizontal="true"
                android:text="DASH BOARD"
                android:textStyle="bold"
                android:textColor="#000000"
                app:fontFamily="@font/roboto" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="27dp"
                android:layout_toRightOf="@+id/t_dashboard"
                android:src="@drawable/ellipsehometheraicon" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/topspace"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-2dp"
        android:background="#F3F3F3"
        android:elevation="10dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/shapearrow"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/shapearrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/shapearrow"
            android:gravity="center"
            android:text="HI, JENNY!"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/REJUVENATING"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/shapearrow"
            android:gravity="center"
            android:text="REJUVENATING\nPROGRAM"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="75dp"
            android:text="EDIT"
            android:textColor="#80585858"
            android:textSize="8dp"
            app:fontFamily="@font/roboto" />

        <!-- middle -->
        <LinearLayout
            android:id="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">

            <!-- moisture -->
            <LinearLayout
                android:id="@+id/moisture"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="MOISTURE SCORE"
                        android:textColor="#80585858"
                        android:textSize="9dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="A+"
                        android:textColor="#80585858"
                        android:textSize="70dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="110dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="#80000000"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="increased"
                            android:textColor="#80000000"
                            android:textSize="9dp" />

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#B37A0909"
                    android:gravity="center"
                    android:text="MEASURE MOISTURE"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- wrinkles -->
            <LinearLayout
                android:id="@+id/wrinkles"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="WRINKLE SCORE"
                        android:textColor="#80585858"
                        android:textSize="9dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="B"
                        android:textColor="#80585858"
                        android:textSize="70dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="110dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textColor="#80000000"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="decreased"
                            android:textColor="#80000000"
                            android:textSize="9dp" />

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#00A1B7"
                    android:gravity="center"
                    android:text="MEASURE WRINKLES"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- bottom -->
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <!-- PERSONAL INFORMATION -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="PERSONAL INFORMATION"
                android:textColor="#585858"
                android:textSize="9dp" />

            <!-- skin_type -->
            <LinearLayout
                android:id="@+id/skin_type"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="SKIN TYPE"
                    android:textColor="#80585858"
                    android:textSize="9dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="No data yet"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Do you want to find out your skin type?   ▶"
                    android:textColor="#80585858"
                    android:textSize="9dp" />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />


            <!-- Tightening Program -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="SELECTED PROGRAM"
                        android:textColor="#80585858"
                        android:textSize="9dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_toRightOf="@+id/lef"
                        android:gravity="center"
                        android:text="EDIT"
                        android:textColor="#80585858"
                        android:textSize="8dp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wrikleiconwrinkleicon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"
                        android:text="Tightening Program"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- userImage -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/topspace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:elevation="10dp"
        android:src="@drawable/ellipseprofile" />

</android.widget.RelativeLayout>